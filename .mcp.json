{
  "mcpServers": {
    "vector-memory-project": {
      "type": "stdio",
      "command": "bun",
      "args": [
        "run",
        "/home/aerion/dev/vector-memory-mcp/src/index.ts"
      ]
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ]
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--mode",
        "no-memories",
        "--context",
        "ide-assistant",
        "--project",
        "/home/aerion/dev/vector-memory-mcp"
      ]
    }
  }
}